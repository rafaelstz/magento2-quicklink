$viewModel = $block->getViewModel();
?>
<!-- Google Quicklink -->
<script>
    require(['jquery', 'magento2-quicklink/view/frontend/templates/quicklink', 'polyfillio', 'domReady!'], function($, quicklink) {
        quicklink.listen({
            <?php
            echo $block->escapeHtml($viewModel->getTimeout());
            echo $block->escapeHtml($viewModel->getLimit());
            echo $block->escapeHtml($viewModel->getConcurrencyLimit());
            echo $block->escapeHtml($viewModel->getPriority()); ?>
            ignores: [
                /\/api\/?/,
                uri => uri.includes('#'),
                uri => uri.includes('logout'),
                uri => uri.includes('account'),
                uri => uri.includes('checkout'),
                (uri, elem) => elem.hasAttribute('noprefetch')
            ]
        });
    });
</script>
